/**
 * WP MCP - Sophisticated Black & White Design System
 * Inspired by Vercel, Playbooks, Ollama, and Cursor documentation
 */

/* Import Inter font */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap');
@import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@300;400;500;600;700&display=swap');

/* Design System Variables */
:root {
  /* Colors - Pure Black & White */
  --color-black: #000000;
  --color-white: #ffffff;
  --color-gray-50: #fafafa;
  --color-gray-100: #f5f5f5;
  --color-gray-200: #e5e5e5;
  --color-gray-300: #d4d4d4;
  --color-gray-400: #a3a3a3;
  --color-gray-500: #737373;
  --color-gray-600: #525252;
  --color-gray-700: #404040;
  --color-gray-800: #262626;
  --color-gray-900: #171717;
  
  /* Typography */
  --font-family-base: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', sans-serif;
  --font-family-mono: 'JetBrains Mono', 'Fira Code', 'Monaco', 'Consolas', monospace;
  
  /* Typography Scale */
  --font-size-xs: 0.75rem;
  --font-size-sm: 0.875rem;
  --font-size-base: 1rem;
  --font-size-lg: 1.125rem;
  --font-size-xl: 1.25rem;
  --font-size-2xl: 1.5rem;
  --font-size-3xl: 1.875rem;
  --font-size-4xl: 2.25rem;
  --font-size-5xl: 3rem;
  --font-size-6xl: 3.75rem;
  --font-size-7xl: 4.5rem;
  
  /* Spacing Scale */
  --spacing-xs: 0.5rem;
  --spacing-sm: 1rem;
  --spacing-md: 1.5rem;
  --spacing-lg: 2rem;
  --spacing-xl: 3rem;
  --spacing-2xl: 4rem;
  --spacing-3xl: 6rem;
  --spacing-4xl: 8rem;
  --spacing-5xl: 10rem;
  
  /* Shadows */
  --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  
  /* Border Radius */
  --radius-sm: 0.375rem;
  --radius-md: 0.5rem;
  --radius-lg: 0.75rem;
  --radius-xl: 1rem;
  --radius-2xl: 1.5rem;
}

/* Override Docusaurus defaults */
:root {
  --ifm-color-primary: var(--color-black);
  --ifm-color-primary-dark: var(--color-black);
  --ifm-color-primary-darker: var(--color-black);
  --ifm-color-primary-darkest: var(--color-black);
  --ifm-color-primary-light: var(--color-gray-700);
  --ifm-color-primary-lighter: var(--color-gray-600);
  --ifm-color-primary-lightest: var(--color-gray-500);
  --ifm-code-font-size: 95%;
  --docusaurus-highlighted-code-line-bg: rgba(0, 0, 0, 0.1);
  --ifm-background-color: var(--color-white);
  --ifm-background-surface-color: var(--color-white);
  --ifm-color-content: var(--color-gray-900);
  --ifm-color-content-secondary: var(--color-gray-600);
  --ifm-font-family-base: var(--font-family-base);
  --ifm-font-family-monospace: var(--font-family-mono);
}

/* Dark mode - Proper dark theme */
[data-theme='dark'] {
  --ifm-color-primary: var(--color-white);
  --ifm-color-primary-dark: var(--color-gray-100);
  --ifm-color-primary-darker: var(--color-gray-200);
  --ifm-color-primary-darkest: var(--color-gray-300);
  --ifm-color-primary-light: var(--color-gray-100);
  --ifm-color-primary-lighter: var(--color-gray-200);
  --ifm-color-primary-lightest: var(--color-gray-300);
  --docusaurus-highlighted-code-line-bg: rgba(255, 255, 255, 0.1);
  --ifm-background-color: #0a0a0a;
  --ifm-background-surface-color: #1a1a1a;
  --ifm-color-content: var(--color-white);
  --ifm-color-content-secondary: var(--color-gray-300);
  
  /* Dark mode colors - properly inverted */
  --color-black: #ffffff;
  --color-white: #000000;
  --color-gray-50: #0a0a0a;
  --color-gray-100: #1a1a1a;
  --color-gray-200: #2a2a2a;
  --color-gray-300: #404040;
  --color-gray-400: #525252;
  --color-gray-500: #737373;
  --color-gray-600: #a3a3a3;
  --color-gray-700: #d4d4d4;
  --color-gray-800: #e5e5e5;
  --color-gray-900: #f5f5f5;
  
  /* Dark mode shadows */
  --shadow-sm: 0 1px 2px 0 rgba(255, 255, 255, 0.05);
  --shadow-md: 0 4px 6px -1px rgba(255, 255, 255, 0.1), 0 2px 4px -1px rgba(255, 255, 255, 0.06);
  --shadow-lg: 0 10px 15px -3px rgba(255, 255, 255, 0.1), 0 4px 6px -2px rgba(255, 255, 255, 0.05);
  --shadow-xl: 0 20px 25px -5px rgba(255, 255, 255, 0.1), 0 10px 10px -5px rgba(255, 255, 255, 0.04);
}

/* Global Typography */
html {
  font-family: var(--font-family-base);
  font-size: 16px;
  line-height: 1.6;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  scroll-behavior: smooth;
}

body {
  font-family: var(--font-family-base);
  color: var(--ifm-color-content);
  background-color: var(--ifm-background-color);
  margin: 0;
  padding: 0;
}

/* Typography Scale */
h1, h2, h3, h4, h5, h6 {
  font-family: var(--font-family-base);
  font-weight: 600;
  line-height: 1.1;
  letter-spacing: -0.025em;
  color: var(--ifm-color-content);
  margin: 0 0 var(--spacing-md) 0;
}

h1 {
  font-size: var(--font-size-7xl);
  font-weight: 900;
  letter-spacing: -0.05em;
  line-height: 1;
}

h2 {
  font-size: var(--font-size-6xl);
  font-weight: 800;
  letter-spacing: -0.04em;
  line-height: 1.1;
}

h3 {
  font-size: var(--font-size-5xl);
  font-weight: 700;
  letter-spacing: -0.03em;
  line-height: 1.2;
}

h4 {
  font-size: var(--font-size-4xl);
  font-weight: 600;
  letter-spacing: -0.02em;
  line-height: 1.3;
}

h5 {
  font-size: var(--font-size-3xl);
  font-weight: 600;
  letter-spacing: -0.01em;
  line-height: 1.4;
}

h6 {
  font-size: var(--font-size-2xl);
  font-weight: 600;
  line-height: 1.5;
}

p {
  font-size: var(--font-size-lg);
  line-height: 1.7;
  color: var(--ifm-color-content-secondary);
  margin: 0 0 var(--spacing-md) 0;
  font-weight: 400;
}

/* Hero Section */
.hero {
  background: linear-gradient(135deg, var(--ifm-background-color) 0%, var(--color-gray-50) 100%);
  padding: var(--spacing-5xl) 0;
  text-align: center;
  position: relative;
  overflow: hidden;
}

.hero__title {
  font-size: var(--font-size-7xl);
  font-weight: 900;
  color: var(--ifm-color-content);
  margin-bottom: var(--spacing-lg);
  letter-spacing: -0.05em;
  line-height: 1;
}

.hero__subtitle {
  font-size: var(--font-size-2xl);
  color: var(--ifm-color-content-secondary);
  margin-bottom: var(--spacing-2xl);
  font-weight: 400;
  line-height: 1.5;
  max-width: 800px;
  margin-left: auto;
  margin-right: auto;
}

/* Buttons */
.button {
  font-family: var(--font-family-base);
  font-weight: 500;
  font-size: var(--font-size-base);
  padding: var(--spacing-sm) var(--spacing-xl);
  border-radius: var(--radius-lg);
  border: 2px solid transparent;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-xs);
  cursor: pointer;
  position: relative;
  overflow: hidden;
}

.button--primary {
  background-color: var(--ifm-color-primary);
  color: var(--ifm-background-color);
  border-color: var(--ifm-color-primary);
  box-shadow: var(--shadow-md);
}

.button--primary:hover {
  background-color: var(--ifm-color-primary-dark);
  border-color: var(--ifm-color-primary-dark);
  color: var(--ifm-background-color);
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

.button--secondary {
  background-color: var(--ifm-background-color);
  color: var(--ifm-color-content);
  border-color: var(--color-gray-300);
  box-shadow: var(--shadow-sm);
}

.button--secondary:hover {
  background-color: var(--color-gray-50);
  border-color: var(--color-gray-400);
  color: var(--ifm-color-content);
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
}

.button--outline {
  background-color: transparent;
  color: var(--ifm-color-content);
  border-color: var(--color-gray-300);
}

.button--outline:hover {
  background-color: var(--color-gray-50);
  border-color: var(--color-gray-400);
  color: var(--ifm-color-content);
  transform: translateY(-2px);
  box-shadow: var(--shadow-sm);
}

/* Layout */
.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 var(--spacing-xl);
}

/* Sections */
.section {
  padding: var(--spacing-5xl) 0;
}

.section--alt {
  background-color: var(--color-gray-50);
}

.section--dark {
  background-color: var(--ifm-color-primary);
  color: var(--ifm-background-color);
}

.section--dark h1,
.section--dark h2,
.section--dark h3,
.section--dark h4,
.section--dark h5,
.section--dark h6 {
  color: var(--ifm-background-color);
}

.section--dark p {
  color: var(--color-gray-300);
}

/* Cards */
.card {
  background-color: var(--ifm-background-surface-color);
  border: 1px solid var(--color-gray-200);
  border-radius: var(--radius-xl);
  padding: var(--spacing-2xl);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  height: 100%;
  position: relative;
  overflow: hidden;
}

.card:hover {
  transform: translateY(-4px);
  box-shadow: var(--shadow-xl);
  border-color: var(--color-gray-300);
}

.card__header {
  margin-bottom: var(--spacing-lg);
}

.card__title {
  font-size: var(--font-size-xl);
  font-weight: 600;
  color: var(--ifm-color-content);
  margin-bottom: var(--spacing-sm);
}

.card__description {
  color: var(--ifm-color-content-secondary);
  line-height: 1.6;
}

/* Provider Cards */
.providerCard {
  text-align: center;
  padding: var(--spacing-2xl);
  margin: var(--spacing-sm) 0;
  background: var(--ifm-background-surface-color);
  border: 1px solid var(--color-gray-200);
  border-radius: var(--radius-xl);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.providerCard::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: linear-gradient(90deg, var(--ifm-color-primary) 0%, var(--color-gray-600) 100%);
  transform: scaleX(0);
  transition: transform 0.3s ease;
}

.providerCard:hover {
  transform: translateY(-4px);
  box-shadow: var(--shadow-xl);
  border-color: var(--color-gray-300);
}

.providerCard:hover::before {
  transform: scaleX(1);
}

.providerCard h3 {
  font-size: var(--font-size-xl);
  font-weight: 600;
  color: var(--ifm-color-content);
  margin-bottom: var(--spacing-sm);
}

.providerCard p {
  color: var(--ifm-color-content-secondary);
  font-size: var(--font-size-sm);
  margin: 0;
}

/* Use Case Cards */
.useCaseCard {
  padding: var(--spacing-2xl);
  margin: var(--spacing-sm) 0;
  background: var(--ifm-background-surface-color);
  border: 1px solid var(--color-gray-200);
  border-radius: var(--radius-xl);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.useCaseCard::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: var(--ifm-color-primary);
  transform: scaleX(0);
  transition: transform 0.3s ease;
}

.useCaseCard:hover {
  transform: translateY(-4px);
  box-shadow: var(--shadow-xl);
  border-color: var(--color-gray-300);
}

.useCaseCard:hover::before {
  transform: scaleX(1);
}

.useCaseCard h3 {
  font-size: var(--font-size-xl);
  font-weight: 600;
  color: var(--ifm-color-content);
  margin-bottom: var(--spacing-md);
}

.useCaseCard p {
  color: var(--ifm-color-content-secondary);
  line-height: 1.6;
  margin: 0;
}

/* Diagrams */
.diagramContainer {
  margin: var(--spacing-3xl) 0;
  padding: var(--spacing-3xl);
  background: var(--ifm-background-surface-color);
  border-radius: var(--radius-2xl);
  border: 1px solid var(--color-gray-200);
  box-shadow: var(--shadow-lg);
}

.mermaidDiagram {
  margin-bottom: var(--spacing-2xl);
  padding: var(--spacing-xl);
  background: var(--color-gray-50);
  border-radius: var(--radius-lg);
  border: 1px solid var(--color-gray-200);
  font-family: var(--font-family-mono);
  font-size: var(--font-size-sm);
  line-height: 1.6;
  white-space: pre-wrap;
  overflow-x: auto;
  color: var(--color-gray-700);
}

.imagePrompt {
  background: var(--color-gray-50);
  padding: var(--spacing-xl);
  border-radius: var(--radius-lg);
  border-left: 4px solid var(--ifm-color-primary);
  font-size: var(--font-size-sm);
  line-height: 1.6;
  color: var(--color-gray-700);
}

.imagePrompt strong {
  color: var(--ifm-color-content);
  display: block;
  margin-bottom: var(--spacing-sm);
  font-weight: 600;
}

/* Features */
.features {
  padding: var(--spacing-5xl) 0;
  background: var(--ifm-background-color);
}

.featureIcon {
  font-size: 4rem;
  margin-bottom: var(--spacing-lg);
  display: block;
  text-align: center;
}

/* Code blocks */
code {
  font-family: var(--font-family-mono);
  font-size: 0.9em;
  background-color: var(--color-gray-100);
  color: var(--ifm-color-content);
  padding: 0.2em 0.4em;
  border-radius: var(--radius-sm);
  border: 1px solid var(--color-gray-200);
}

pre {
  font-family: var(--font-family-mono);
  background-color: var(--color-gray-50);
  border: 1px solid var(--color-gray-200);
  border-radius: var(--radius-lg);
  padding: var(--spacing-xl);
  overflow-x: auto;
  margin: var(--spacing-lg) 0;
}

/* Responsive Design */
@media (max-width: 1024px) {
  h1 {
    font-size: var(--font-size-6xl);
  }
  
  h2 {
    font-size: var(--font-size-5xl);
  }
  
  h3 {
    font-size: var(--font-size-4xl);
  }
  
  .hero__title {
    font-size: var(--font-size-6xl);
  }
  
  .hero__subtitle {
    font-size: var(--font-size-xl);
  }
  
  .section {
    padding: var(--spacing-4xl) 0;
  }
  
  .diagramContainer {
    padding: var(--spacing-2xl);
  }
}

@media (max-width: 768px) {
  h1 {
    font-size: var(--font-size-5xl);
  }
  
  h2 {
    font-size: var(--font-size-4xl);
  }
  
  h3 {
    font-size: var(--font-size-3xl);
  }
  
  .hero__title {
    font-size: var(--font-size-5xl);
  }
  
  .hero__subtitle {
    font-size: var(--font-size-lg);
  }
  
  .section {
    padding: var(--spacing-3xl) 0;
  }
  
  .container {
    padding: 0 var(--spacing-lg);
  }
  
  .diagramContainer {
    padding: var(--spacing-xl);
  }
  
  .providerCard,
  .useCaseCard {
    margin: var(--spacing-xs) 0;
  }
  
  .buttons {
    flex-direction: column;
    gap: var(--spacing-sm);
  }
}

@media (max-width: 480px) {
  h1 {
    font-size: var(--font-size-4xl);
  }
  
  h2 {
    font-size: var(--font-size-3xl);
  }
  
  h3 {
    font-size: var(--font-size-2xl);
  }
  
  .hero__title {
    font-size: var(--font-size-4xl);
  }
  
  .hero__subtitle {
    font-size: var(--font-size-base);
  }
  
  .section {
    padding: var(--spacing-2xl) 0;
  }
  
  .container {
    padding: 0 var(--spacing-md);
  }
} 